{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd farm-backend && ./mvnw clean package -DskipTests"
    },
    "deploy": {
        "startCommand": "java -jar farm-backend/target/farm-backend-1.0.0.jar",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}